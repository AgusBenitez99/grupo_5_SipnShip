<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {
  title: 'PRODUCT DETAIL'
}) %>

  <body>

    <%- include('../partials/header') %>

  <main class="main">
    <!-- contenido detalle de producto -->
 <section class="home__prodetail">

      <!-- Seccion que muesta Collage de Imagenes -->
        <article class="prodetail__collage">

              <!-- Varias Imagenes -->
                  <div class="prodetail__collage-images">
                          <% if (images) { %>
                           <% images.forEach(imagen => { %>
                            <img width="100%" src="/images/<%= imagen || 'default-image.jpg' %>" alt="">
                          <% }) %>
                          <% }else{  %>
                            <img width="100%" src="/images/default-image.jpg" alt="">
                          <% } %>
                         

                  </div>

                <!-- Imagen Main -->
                  <div class="prodetail__collage-mainImage">
                        <img class="img-fluid" src="/images/<%= mainImage || 'logo.png' %>" alt="">
                        <h2><%= name %></h2>
                  </div>
        </article>

      <!-- Seccion que muesta Descripcion -->          
        <article class="prodetail__description">                   
                              <h5 class="col-12"><%= brand %></h5>                    
                              <h4 class="col-12 fw-bold"><%= name %> <%= size %></h4>
                              <hr>
                              <p class="fs-6"><%= description %></h4>
                              <h4 class="col-12"><%= `$ ${price}`%></h4> 
                              <a href="/product/trolley">AGREGAR</a>                        
</article>
  </section>

                     
                  
  <h2>Productos Relacionados</h2>     

    <div class="swiper mySwiper2">
      <div class="swiper-wrapper">
        <% products.forEach(product => { %>
          <div class="swiper-slide">
            <%- include('../partials/cards',{product}) %>
          </div>
        <% }) %>
      </div>
    </div>
</main>
 
    
    <%- include('../partials/footer') %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <!-- swiper -->
    <script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>
    <!--  <script src="/js/carousel_swiper.js"></script> -->
    <script src="/javascripts/carousel_swiper2.js"></script>
  </body>
</html>
