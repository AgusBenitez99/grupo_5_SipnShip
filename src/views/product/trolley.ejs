<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {
  title: 'CART'
}) %>


  <body>
    
    <!-- HEADER -->
    <%- include('../partials/header') %>

    <!-- CARRITO HOME -->
    <main class="home__cart">
      <h1>Mi Pedido</h1>

      <!-- PRODUCTOS -->
      <section class="home__cart-product">
        <div class="titles-container">
          <h3>Producto</h3>
          <h3>Cantidad</h3>
          <h3>Total</h3>
        </div>

        <!-- ARTICULO 1 -->
        <article class="products-articles">
          <div class="products-descriptions">
            <div class="products-img">
              <img src="/images/johnnie-walker-gold.jpg" alt="Img-Whisky" />
            </div>
            <div>
              <p class="products-txt">Whisky</p>
            </div>
          </div>
          <div class="products-btn">
            <button>-</button>
            <span>1</span>
            <button>+</button>
            <button class="btn-trash"><i class="fa-solid fa-trash"></i></button>
          </div>
          <div class="products-price">
            <span>$2350,00</span>
          </div>
        </article>

        <!-- ARTICULO 2 -->
        <article class="products-articles">
          <div class="products-descriptions">
            <div class="products-img">
              <img src="/images/johnnie-walker-gold.jpg" alt="Img-Whisky" />
            </div>
            <div>
              <p class="products-txt">Whisky</p>
            </div>
          </div>
          <div class="products-btn">
            <button>-</button>
            <span>1</span>
            <button>+</button>
            <button class="btn-trash"><i class="fa-solid fa-trash"></i></button>
          </div>
          <div class="products-price">
            <span>$2350,00</span>
          </div>
        </article>

        <!-- ARTICULO 3 -->
        <article class="products-articles">
          <div class="products-descriptions">
            <div class="products-img">
              <img src="/images/johnnie-walker-gold.jpg" alt="Img-Whisky" />
            </div>
            <div>
              <p class="products-txt">Whisky</p>
            </div>
          </div>
          <div class="products-btn">
            <button>-</button>
            <span>1</span>
            <button>+</button>
            <button class="btn-trash"><i class="fa-solid fa-trash"></i></button>
          </div>
          <div class="products-price">
            <span>$2350,00</span>
          </div>
        </article>

        <!-- ARTICULO 4 -->
        <article class="products-articles">
          <div class="products-descriptions">
            <div class="products-img">
              <img src="/images/johnnie-walker-gold.jpg" alt="Img-Whisky" />
            </div>
            <div>
              <p class="products-txt">Whisky</p>
            </div>
          </div>
          <div class="products-btn">
            <button>-</button>
            <span>1</span>
            <button>+</button>
            <button class="btn-trash"><i class="fa-solid fa-trash"></i></button>
          </div>
          <div class="products-price">
            <span>$2350,00</span>
          </div>
        </article>

        <!-- FILA TOTALES -->
        <div class="products-totals">
          <h3>Total</h3>
          <h3>4</h3>
          <h3>$10500,00</h3>
        </div>
      </section>
      <div class="carrito_sections-container">
        <!-- ENVIO  -->
        <section class="home__cart-ship">
          <h2>Gastos de Envio</h2>

          <!-- FORMULARIO -->
          <form class="formShip" action="/carrito" method="get">
            <div class="formShip-prov">
              <label>Provincia</label>
              <select name="provincias">
                <option value="buenosAires">Buenos Aires</option>
                <option value="córdoba">Córdoba</option>
                <option value="santaFe">Santa Fe</option>
                <option value="mendoza">Mendoza</option>
              </select>
            </div>
            <div class="formShip-city">
              <label for="ciudad">Ciudad</label>
              <input type="text" name="ciudad" id="ciudad" />
            </div>
            <div class="formShip-cp">
              <label for="cp">Codigo Postal</label>
              <input type="text" name="codigoPostal" id="cp" />
            </div>
            <button class="formShip-button">Estimacion</button>
            <h3>$2350,00</h3>
          </form>
        </section>
        <!-- PAGOS  -->
        <section class="home__cart-pay">
          <h2>Detalles de Pago</h2>
          <div class="pay-totals">
            <h4>Subtotal</h4>
            <h4>$10500,00</h4>
            <h4>Gastos de Envío</h4>
            <h4>$2350,00</h4>
          </div>
          <label for="cupon">Cupón de Descuento</label>
          <input type="text" name="cupon" id="cupon" />
          <h3>Total : $12850</h3>
          <label>Medios de Pago</label>
          <div class="method-pay">
            <select name="Formas de Pago">
              <option value="banco">Pago Online</option>
              <option value="credito">Tarjeta de Credito</option>
              <option value="transferencia">Transferencia</option>
              <option value="debito">Tarjeta de Débito</option>
            </select>
            <select name="Banco">
              <option value="frances">BBVBA Frances</option>
              <option value="nacion">Banco Nación</option>
              <option value="provincia">Banco Provincia</option>
            </select>
            <select name="Cuotas">
              <option value="1">1 Cuota</option>
              <option value="3">3 Cuotas</option>
              <option value="6">6 Cuotas</option>
              <option value="12">12 Cuotas</option>
            </select>
            <span>Descuentos Intereses</span>
          </div>
        </section>
      </div>
      <!-- CONFIRMAR COMPRA -->
      <button class="payconfirm-btn">CONFIRMAR COMPRA</button>
    </main>
    <!-- FOOTER -->
    <%- include('../partials/footer') %>

  </body>
</html>
