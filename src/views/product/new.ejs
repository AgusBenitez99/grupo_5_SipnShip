<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head', { title: 'HOME' }) %>

  <body>
    <%- include('../partials/header') %>
    <main class="main">
      <div class="main__form">
        <h1>Crear Producto</h1>
        <form  action="/product/created" method="POST"  enctype="multipart/form-data">
          <div class="main__form__body">
            <div class="main__form__input2">
              <label for="name">Nombre de Producto</label>
              <input
                type="text"
                id="name"
                name="name"
                placeholder="Ingrese Nombre del Producto"
                required
                class="form-control <%= locals.errors && (errors.name && 'is-invalid') %>"
              />
            </div>
            
            <div class="main__form__input2">
              <label for="category">Categoría</label>
              <select name="category">
                 <% category.forEach(item => { %>
                  <option value="<%= item.id %>"><%= item.name %> </option>
                 <% }) %>
              </select>
            </div>
            <div class="main__form__input2">
              <label for="section">Seccion</label>
              <select name="section">
                 <% section.forEach(item => { %>
                  <option value="<%= item.id %>"><%= item.name %> </option>
                 <% }) %>
              </select>
            </div>
              <div class="main__form__input2">
                <label for="price">Precio</label>
                <input
                  type="number"
                  id="price"
                  name="price"
                  placeholder="Ingrese un precio"
                  class="form-control <%= locals.errors && (errors.price && 'is-invalid') %>"
                />
              </div>
              <div class="main__form__input2">
                <label for="price">Descuento</label>
                <input
                  type="number"
                  id="discount"
                  name="discount"
                  placeholder="Ingrese el descuento"
                />
              </div>
            
            
              <div class="main__form__input2">
                <label for="size">Tamaño</label>
                <input
                  type="text"
                  id="size"
                  name="size"
                  placeholder="Ingrese un tamaño"
                />
              </div>
              
            
            <div class="main__form__input2">
              <small class="ms-2 text-danger"><%= locals.errors && (errors.images && errors.images.msg) %></small>
              <label for="mainImage">Imagen principal</label>
              <input type="file" id="mainImage" name="mainImage" />
            </div>
            <div class="main__form__input2">
              <label for="images">Imagenes</label>
              <input multiple type="file" id="images" name="images" />
            </div>
            <div class="main__form__input2">
              <label for="description">Descripción</label>
              <textarea
                name="description"
                id="description"
                cols="22"
                rows="2"
                class="form-control <%= locals.errors && (errors.description && 'is-invalid') %>"
              ></textarea>
            </div>
            <div class="main__form__links">
             
                <button type="submit">Cancelar</button>
              
             
                <button type="submit">Guardar</button>
             
            </div>
          </div>
        </form>
      </div>
    </main>
      <%- include('../partials/footer') %>
      <%- include('../partials/script') %>
  </body>

</html>