<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {
  title: 'LOGIN'
}) %>

<body class="login__body">

    <%- include('../partials/header') %>
    
    <main class="main">
        <div class="main__form">
          <h1 id="title">Bienvenido</h1>

          <form id='formLogin' action="/user/login" method="POST">

            <div class="main__form__input-group">
              <div class="main__form__input-field">
                <i class="far fa-envelope"></i>
                <input 
                type="email" 
                id="email"
                placeholder="Email" 
                name="email"/>
              </div>
              <small id="msgError-email" class="text-validations"><%= locals.errors && (errors.email && errors.email.msg); %></small>

              <div class="main__form__input-field">
                <i class="fa-solid fa-lock"></i>
                <input 
                type="password" 
                id="password"
                placeholder="Contraseña" 
                name="password"/>
                <i class="fa-regular fa-eye"></i>
              </div>
              <small id="msgError-password" class="text-validations"><%= locals.errors && (errors.password && errors.password.msg); %></small>

              <div class="main__form__checkbox">
                <input type="checkbox" name="remember" />
                <label  for="remember">
                  Recuerdame
                </label>
              </div>
            </div>

            <p>O ingresar con</p>
            <div class="main__form__links">
              <button><i class="fab fa-google"></i></button>
              <button><i class="fab fa-facebook"></i></button>
            </div>
            <small  id="msgError-empty"  class="ms-2 text-danger"></small>

            <div class="primary__button">
              <button id="signUp" type="submit" >Ingresar</button>
            </div>
            <a href="/user/register">Olvido su contraseña?/Registrarse</a>
          </form>

        </div>
    </main>

    <%- include('../partials/footer') %>
    <%- include('../partials/script') %>

    <!-- VALIDACION FRONTEND -->
    <script src="/javascripts/validationLogin.js"></script>
    
</body>
</html>