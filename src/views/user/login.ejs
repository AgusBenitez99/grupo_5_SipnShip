<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', {
  title: 'LOGIN'
}) %>

<body class="login__body">

    <%- include('../partials/header') %>
    
    <main class="main__login">
        <div class="main__form">
          <h1 id="title">Bienvenido</h1>
          <form action="">
            <div class="main__form__input-group">
              <div class="main__form__input-field">
                <i class="far fa-envelope"></i>
                <input type="email" placeholder="Email" />
              </div>
              <div class="main__form__input-field">
                <i class="fa-solid fa-lock"></i>
                <input type="password" placeholder="Contraseña" />
                <i class="fa-regular fa-eye-slash"></i>
              </div>
              
              
              <div class="main__form__checkbox">
                <input type="checkbox" />
                <p>Recuerdame</p>
              </div>
            </div>
            <p>O ingresar con</p>
            <div class="main__form__links">
              <button><i class="fab fa-google"></i></button>
              <button><i class="fab fa-facebook"></i></button>
            </div>
            <div class="primary__button">
              <button id="signUp" type="submit">Registrarse</button>
            </div>
            <a href="/user/register">Olvido su contraseña?/Registrarse</a>
          </form>
        </div>
    </main>

    <%- include('../partials/footer') %>
    
</body>
</html>