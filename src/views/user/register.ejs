<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title: 'REGISTER' }) %>

  <body>

    <%- include('../partials/header') %>

      <main class="main">
        <div class="main__form">
          <h1 id="title">Registro</h1>
          <form id='formRegister' action="/user/register" method="POST" enctype="multipart/form-data" >
            <div class="main__form__input-group">

              <!-- div nombre -->
              <div class="main__form__input-field">
                <i class="fa-solid fa-circle-user  fa-lg"></i>
                <input 
                type="text"
                id="name"
                name="name"
                placeholder="Ingrese su nombre"
                value="<%= locals.old && (old.name && old.name) %>" />
              </div>
              <small id="msgError-name" class="text-validations"><%= locals.errors && (errors.name && errors.name.msg); %></small>
              <!-- fin -->

              <!-- div apellido -->
              <div class="main__form__input-field">
                <i class="fa-solid fa-circle-user fa-lg"></i>
                <input
                 type="text"
                 id="lastName"
                 name="lastName" 
                 placeholder="Ingrese su apellido" />
              </div>
              <small id="msgError-lastName" class="text-validations"><%= locals.errors && (errors.lastName && errors.lastName.msg); %></small>
              <!-- fin -->

              <!-- div email -->
              <div class="main__form__input-field">
                <i class="far fa-envelope"></i>
                <input 
                type="email"
                 id="email"
                 name="email"
                 placeholder="Email" />
              </div>
              <small id="msgError-email" class="text-validations"><%= locals.errors && (errors.email && errors.email.msg); %></small>
              <!-- fin -->

              <!-- div contrase単a -->
              <div class="main__form__input-field">
                <i class="fa-solid fa-lock"></i>
                <input 
                type="password" 
                id="password"
                name="password" 
                placeholder="Contrase単a" />
                <i class="fa-solid fa-eye"></i>
              </div>
              <small id="msgError-password" class="text-validations"><%= locals.errors && (errors.password && errors.password.msg); %></small>
              <!-- fin -->

              <!-- div confirmar contrase単a -->
              <div class="main__form__input-field">
                <i class="fa-solid fa-lock"></i>
                <input
                type="password" 
                id="password2"
                name="password2" 
                placeholder="Confirmar contrase単a" />
                <i class="fa-solid fa-eye"></i>
              </div>
              <small id="msgError-password2" class="text-validations"><%= locals.errors && (errors.password2 && errors.password2.msg); %></small>
              <!-- fin -->
              
              <!-- div fecha -->
              <div class="main__form__input-field">
                <i class="fa-solid fa-calendar-days"></i>
                <input type="date" name="birthdate" placeholder="Ingrese su fecha de nacimiento" />
              </div>
              <!-- fin -->

              <div class="main__form__input-field">
                <i class="fa-solid fa-file-arrow-up fa-bounce fa-lg"></i>
                <input type="file" id="image" name="image"/>
              </div>

              <!-- check -->
              <div class="main__form__checkbox">
                <input type="checkbox" />
                <p>Confirma que es mayor de edad?</p>
              </div>
              <!-- fin -->

            </div>
            <p>O ingresar con</p>
            <div class="main__form__links">
              <button><i class="fab fa-google"></i></button>
              <button><i class="fab fa-facebook"></i></button>
            </div>
            <small  id="msgError-empty"  class="ms-2 text-danger"></small>
            <div class="primary__button">
              <button id="signUp" type="submit">Registrarse</button>
            </div>
            <a href="/user/login">Ya esta registrado?/Login</a>
          </form>
        </div>
      </main>

      <%- include('../partials/footer') %>
      <%- include('../partials/script') %>
      <script src="/javascripts/validationRegister.js"></script>
  </body>

</html>
