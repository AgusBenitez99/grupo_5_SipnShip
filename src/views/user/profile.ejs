<!DOCTYPE html>
<html lang="en">

<%- include('../partials/head', { title: 'PROFILE' }) %>

  <body>

    <%- include('../partials/header') %>

      <main class="main">
          <div class="main__form">
            <h1 id="title">Mi Perfil</h1>
            <div>
              <img src="/images/users/<%= image || 'default.png' %>" alt="" style="max-width: 100px;">
            </div>
            <form action="/user/profile/<%= id %>?_method=PUT" method="POST" enctype="multipart/form-data" >
              <div class="main__form__input-group">
                
                <div class="main__form__input-field">
                  <i class="fa-solid fa-circle-user  fa-lg"></i>
                  <input type="text" name="firstName" placeholder="Ingrese su nombre"  value="<%= firstName && firstName %>" />
                </div>
                <small class="text-validations"><%= locals.errors && (errors.firstName && errors.firstName.msg); %></small>
                
                 <div class="main__form__input-field">
                  <i class="fa-solid fa-circle-user fa-lg"></i>
                  <input type="text" name="lastName" placeholder="Ingrese su apellido"  value="<%= lastName && lastName %>" />
                </div>
                <small class="text-validations"><%= locals.errors && (errors.lastName && errors.lastName.msg); %></small>
               
                <div class="main__form__input-field">
                  <i class="far fa-envelope"></i>
                  <input type="email" name="email" placeholder="Email" value="<%= email && email %>" />
                </div>
                <small class="text-validations"><%= locals.errors && (errors.email && errors.email.msg); %></small>
                          
                <div class="main__form__input-field">
                  <i class="fa-solid fa-file-arrow-up fa-bounce fa-lg"></i>
                  <input type="file" id="image" name="image"/>
                </div>
              </div> 
              
              <div class="primary__button">
                <button id="signUp" type="submit">Actualizar perfil</button>
              </div>
              
            </form>
          </div>
        </main>
      <%- include('../partials/footer') %>
    
  </body>

</html>